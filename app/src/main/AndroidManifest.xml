<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.eunsiljo.kakaoimagesearcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.KakaoImageSearcher"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SearchActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|uiMode|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PhotoViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|uiMode|screenSize"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateHidden" />

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
    </application>

</manifest>